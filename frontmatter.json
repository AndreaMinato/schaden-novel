{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.publicFolder": "public",
  "frontMatter.content.pageFolders": [
    {
      "title": "MGA",
      "path": "[[workspace]]/src/content/novels/mga"
    },
    {
      "title": "ATG",
      "path": "[[workspace]]/src/content/novels/atg"
    },
    {
      "title": "TMW",
      "path": "[[workspace]]/src/content/novels/tmw"
    },
    {
      "title": "HTK",
      "path": "[[workspace]]/src/content/novels/htk"
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": "'mga'",
      "filePrefix": null,
      "clearEmpty": true,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string",
          "single": true
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "categories",
          "single": false,
          "choices": ["htk", "mga", "tmw", "atg"]

        },
        {
          "title": "Publishing date",
          "name": "pubDate",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Content preview",
          "name": "heroImage",
          "type": "image",
          "isPreviewImage": true
        }
      ]
    }
  ]
}
